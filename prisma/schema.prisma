// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id    Int     @id @default(autoincrement())
  email String  @unique
  name  String
  username String @unique
  password String
  type String
  rso String?
}

model Location {
  lName  String  @unique
  address String @unique
  longitude Float
  latitude Float
  events Events[]
}

model Events {
  events_ID    Int     @id @default(autoincrement())
  events_Name  String  @unique
  start_Time  DateTime @unique
  end_Time  DateTime @unique
  type String
  rso String?
  at String
  locations_LName Location @relation(fields: [at], references: [lName])
  description String
  comments Comments[]
}

model Comments {
  comments_ID Int @id @default(autoincrement())
  comments String
  event_ID Int
  rating Int
  timestamp DateTime @default(now())
  events Events @relation(fields: [event_ID], references: [events_ID])
}